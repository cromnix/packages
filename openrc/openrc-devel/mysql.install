post_install() {
	conf1='basedir = /usr'
	conf2='pid-file = /var/run/mysqld/mysqld.pid'
	conf3='user = mysql'
	conf4='datadir = /var/lib/mysql'
	file="/etc/mysql/my.cnf"
	echo "	==>  $file [mysqld] requires $conf1"
	echo "	==>  $file [mysqld] requires $conf2"
	echo "	==>  $file [mysqld] requires $conf3"
	echo "	==>  $file [mysqld] requires $conf4"
}
